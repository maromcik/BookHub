@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using BookHub.Models
@inject SignInManager<User> SignInManager
@model System.Collections.Generic.IEnumerable<BusinessLayer.Models.RatingDetail>
@{
    ViewData["Title"] = "Ratings";
}

<h1>Ratings</h1>
<form asp-action="Search" asp-controller="Rating" method="get">
    <input type="text" name="query" placeholder="Search..."/>
    <button type="submit">Search</button>
</form>
<p>
</p>

@if (SignInManager.IsSignedIn(User))
{
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Book</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(i => item.Id)</td>
                <td>@Html.DisplayFor(i => item.Book.Name)</td>
                <td>
                    @await Html.PartialAsync("TableButtons", new TableButton { Id = item.Id, ControllerName = "Rating" })
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <h1>No Ratings, first you need to sign in</h1>
}