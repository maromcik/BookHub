@model BusinessLayer.Models.PublisherDetail

<div class="col-12">
    <h2>@Model.Name</h2>
</div>

<div class="col-6">
    <h3>Books:</h3>
    @if (Model.Books != null && Model.Books.Any())
    {
        foreach (var book in Model.Books)
        {
            <div class="border-bottom mb-2">
                <p>   @book.Name</p>
            </div>
        }
    }
    else
    {
        <p>No books yet.</p>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}