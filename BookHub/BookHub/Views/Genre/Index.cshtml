@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using BookHub.Models
@inject SignInManager<User> SignInManager
@model System.Collections.Generic.IEnumerable<BusinessLayer.Models.GenreDetail>
@{
    ViewData["Title"] = "Genres";
}

<h1>Genres</h1>
<form asp-action="Search" asp-controller="Genre" method="get" class="mt-4">
    <div class="input-group mx-left" style="max-width: 300px;">
        <input type="text" name="query" class="form-control" placeholder="Search..." />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
    </form>
    <p>
    </p>
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create Genre", "Create", new { }, new { @class = "btn btn-sm btn-success" })
    </p>
}

<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(i => item.Name)</td>
            <td>
                @await Html.PartialAsync("TableButtons", new TableButton { Id = item.Id, ControllerName = "Genre" })
            </td>
        </tr>
    }
    </tbody>
</table>