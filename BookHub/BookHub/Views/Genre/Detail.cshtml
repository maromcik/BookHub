@model BusinessLayer.Models.GenreDetail
@using Microsoft.AspNetCore.Identity
@using BookHub.Models
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Detail";
}

<div class="col-12">
    <div class="row">
        <div class="col-auto">
            <h2>@Model.Name</h2>
        </div>
<div class="col-auto">
            @await Html.PartialAsync("TableButtons", new TableButton { Id = Model.Id, ControllerName = "Genre", ShowDetail = false })
        </div>
    </div>
</div>

<div class="col-6">
    <h3>Books:</h3>
    @if (Model.Books.Any())
    {
        foreach (var book in Model.Books)
        {
            {
                <div class="border-bottom mb-2">
                    @Html.ActionLink(book.Name, "Detail","Book", new { id = book.Id }, new { @class = "detail-link-underline"})
                </div>
            }
        }
    }
    else
    {
        <p>No books yet.</p>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}