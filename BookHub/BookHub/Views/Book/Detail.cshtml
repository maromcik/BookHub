@model BusinessLayer.Models.BookDetail

<div class="col-12">
    <h2>@Model.Name</h2>
</div>

<div class="col-6">

    <p>
        Publisher:
        <a href="@Url.Action("Detail", "Publisher", new { id = Model.Publisher.Id })">
            <p>@Model.Publisher.Name</p>
        </a>
    </p>
   <p>Primary Genre: @Model.PrimaryGenre.Name</p> 
    <p>Genres:</p>
    @if (Model.Genres.Any())
    {
        foreach (var genre in Model.Genres)
        {
            <div class="border-bottom mb-2">
                <a href="@Url.Action("Detail", "Genre", new { id = genre.Id })">
                    <p>@genre.Name</p>
                </a>
            </div>
        }
    }
    @if (Model.Authors.Any())
    {
        <p>Authors:</p>
        foreach (var author in Model.Authors)
        {
            {
                <div class="border-bottom mb-2">
                    <a href="@Url.Action("Detail", "Author", new { id = author.Id })">
                        <p>@author.Name</p>
                    </a>
                </div>
            }
        }
    }
    <p>Stock: @Model.StockInStorage</p>
    <p>Overall Rating: @Model.OverallRating %</p>
    <p>Price: @Model.Price %</p>
    <h3>Ratings: PartialView to Ratings</h3>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}