@model BusinessLayer.Models.BookDetail

<div class="col-12">
    <h2>@Model.Name</h2>
</div>

<div class="col-6">
    @if (Model.Authors.Any())
    {
        <p>
            Publisher:
            <a href="@Url.Action("Detail", "Publisher", new { id = Model.Publisher.Id })">
                <p>@Model.Publisher.Name</p>
            </a>
        </p>
        <p>Genres:</p>
        foreach (var genre in Model.Genres)
        {
            {
                <div class="border-bottom mb-2">
                    <a href="@Url.Action("Detail", "Genre", new { id = genre.Id })">
                        <p>@genre.Name</p>
                    </a>
                </div>
            }
        }

        <p>Authors:</p>
        foreach (var author in Model.Authors)
        {
            {
                <div class="border-bottom mb-2">
                    <a href="@Url.Action("Detail", "Author", new { id = author.Id })">
                        <p>@author.Name</p>
                    </a>
                </div>
            }
        }
    }
    else
    {
        <p>No books yet.</p>
    }
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

