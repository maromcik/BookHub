@model BusinessLayer.Models.BookCreate

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Book Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrimaryGenre" class="control-label">Primary Genre</label>
                <div id="primary-genre">
                    <input asp-for="PrimaryGenre.Name" class="form-control" placeholder="Genre Name" />
                    <input asp-for="PrimaryGenre.Id" class="form-control" placeholder="Genre Id" />
                    <span asp-validation-for="PrimaryGenre.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Publisher" class="control-label">Publisher</label>
                <input asp-for="Publisher.Name" class="form-control" />
                <span asp-validation-for="Publisher.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StockInStorage" class="control-label">Stock in Storage</label>
                <input asp-for="StockInStorage" class="form-control" />
                <span asp-validation-for="StockInStorage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="form-group" id="authors-container">
                <label asp-for="Authors" class="control-label">Authors (comma-separated)</label>
                <div id="authors-list" class="input-group">
                    <input asp-for="Authors" class="form-control" placeholder="e.g., Author1, Author2" />
                    <span asp-validation-for="Authors" class="text-danger"></span>
                    <div class="input-group-append">
                        <button type="button" id="add-author-btn" class="btn btn-success">Add Author</button>
                    </div>
                </div>
            </div>
           
            <div class="form-group" id="genres-container">
               <label asp-for="Genres" class="control-label">Other Genres (comma-separated)</label>
               <div id="genres-list" class="input-group">
                   <input asp-for="Genres" class="form-control" placeholder="e.g., Fiction, Mystery, Sci-Fi" />
                   <span asp-validation-for="Genres" class="text-danger"></span>
                   <div class="input-group-append">
                       <button type="button" id="add-genre-btn" class="btn btn-success">Add Genre</button>
                   </div>
               </div>
           </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var authorCounter = 1;

            $("#add-author-btn").click(function () {
                var newAuthorInput = `
                    <div class="form-group">
                        <input name="AuthorsInput[${authorCounter}].AuthorName" class="form-control" placeholder="Author Name" />
                        <input name="AuthorsInput[${authorCounter}].AuthorId" class="form-control" value="${authorCounter}" />
                        <span asp-validation-for="AuthorsInput[${authorCounter}].AuthorName" class="text-danger"></span>
                    </div>
                `;

                $("#authors-list").append(newAuthorInput);
                authorCounter++;
            });

            var genreCounter = 1;

            $("#add-genre-btn").click(function () {
                var newGenreInput = `
                    <div class="form-group">
                        <input name="GenresInput[${genreCounter}].GenreName" class="form-control" placeholder="Genre Name" />
                        <input name="GenresInput[${genreCounter}].GenreId" class="form-control" placeholder="Genre Id" />
                        <span asp-validation-for="GenresInput[${genreCounter}].GenreName" class="text-danger"></span>
                    </div>
                `;

                $("#genres-list").append(newGenreInput);
                genreCounter++;
            });
        });
    </script>
}